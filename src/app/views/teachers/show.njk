{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background-image: url({{teacher.avatar_url}});"></section>
    <section class="details">
      <h3>Detalhes</h3>
      <div class="items">
        <div>Nome</div>
        <div>{{ teacher.name }}</div>
      </div>

      <div class="items">
        <div>Idade</div>
        <div>{{ teacher.birth_date }}</div>
      </div>

      <div class="items">
        <div>Escolaridade</div>
        <div>{{ teacher.education_level }}</div>
      </div>

      <div class="items">
        <div>Aulas</div>
        <div>{{ teacher.class_type }}</div>
      </div>

      <div class="items">
        <div>Acompanhamento</div>
        <div>
          {% for class in teacher.subjects_taught %}
            <span>{{ class }}</span>
          {% endfor %}
        </div>
      </div>

      <div class="items">
        <div>Desde</div>
        <div>{{ teacher.created_at }}</div>
      </div>
      <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
    </section>
  </div>
{% endblock content %}